{
  "info": {
    "name": "Journal App",
    "description": "Complete API collection for Journal App with Teacher and Student roles, CRUD Operations, JWT Authentication, and File Uploads. for Toddle, by Aditya Kumar ‚úåüèΩ.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Teacher Operations",
      "item": [
        {
          "name": "Teacher Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"teacher1\",\n    \"password\": \"password123\",\n    \"role\": \"teacher\"\n}"
            }
          }
        },
        {
          "name": "Teacher Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set(\"teacherToken\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"teacher1\",\n    \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Create Journal",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{teacherToken}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/journals",
              "host": ["{{baseUrl}}"],
              "path": ["journals"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"description\": \"Test Journal Entry\",\n    \"student_ids\": [1],\n    \"published_at\": \"2025-05-15T10:00:00Z\"\n}"
            }
          }
        },
        {
          "name": "Update Journal",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{teacherToken}}"
                }
              ]
            },
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/journals/1",
              "host": ["{{baseUrl}}"],
              "path": ["journals", "1"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"description\": \"Updated Journal Entry\",\n    \"student_ids\": [1, 2]\n}"
            }
          }
        },
        {
          "name": "Delete Journal",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{teacherToken}}"
                }
              ]
            },
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/journals/1",
              "host": ["{{baseUrl}}"],
              "path": ["journals", "1"]
            }
          }
        },
        {
          "name": "Publish Journal",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{teacherToken}}"
                }
              ]
            },
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/journals/1/publish",
              "host": ["{{baseUrl}}"],
              "path": ["journals", "1", "publish"]
            }
          }
        },
        {
          "name": "Upload Attachment",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{teacherToken}}"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/journals/1/attachment",
              "host": ["{{baseUrl}}"],
              "path": ["journals", "1", "attachment"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/C:/path/to/your/file.pdf"
                },
                {
                  "key": "attachment_type",
                  "value": "pdf"
                }
              ]
            }
          }
        },
        {
          "name": "Teacher Journal Feed",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{teacherToken}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/journals/feed",
              "host": ["{{baseUrl}}"],
              "path": ["journals", "feed"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Student Operations",
      "item": [
        {
          "name": "Student Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"student1\",\n    \"password\": \"password123\",\n    \"role\": \"student\"\n}"
            }
          }
        },
        {
          "name": "Student Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set(\"studentToken\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"student1\",\n    \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Student Journal Feed",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{studentToken}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/journals/feed",
              "host": ["{{baseUrl}}"],
              "path": ["journals", "feed"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}